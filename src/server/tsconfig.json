{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../../prod",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
    }
  },
  "include": ["../server/**/*"],
  "exclude": ["../client/**/*"]
}
